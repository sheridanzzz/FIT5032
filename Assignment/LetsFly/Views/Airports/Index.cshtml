@model IEnumerable<LetsFly.Models.Airport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Airport Locations</h2>
<div id="map" style="height:300px"></div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AirportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportLocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportLong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirportLat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flight.FlightNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr class="coordinates">

            <td>
                @Html.DisplayFor(modelItem => item.AirportName)
            </td>
            <td class="description">

                @Html.DisplayFor(modelItem => item.AirportCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirportLocationName)
            </td>
            <td class="longitude">
                @Html.DisplayFor(modelItem => item.AirportLong)
            </td>
   
            <td class="latitude">
                @Html.DisplayFor(modelItem => item.AirportLat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.AirportId }) |
                @Html.ActionLink("Details", "Details", new { id=item.AirportId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.AirportId })
            </td>
        </tr>
    }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/mapbox")
}
